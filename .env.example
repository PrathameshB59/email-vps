# HTTP service
HOST=0.0.0.0
PORT=8081

# Mail API security
MAIL_API_TOKEN=replace_with_a_strong_random_token
MAIL_ALLOW_NON_LOCAL=false

# Mail envelope
MAIL_FROM=Email VPS <noreply@stackpilot.in>
MAIL_DAILY_LIMIT=500
MAIL_RETRY_MAX=3
MAIL_RETRY_BASE_MS=30000

# Relay (Postfix local relay expected)
MAIL_RELAY_HOST=127.0.0.1
MAIL_RELAY_PORT=25
MAIL_RELAY_SECURE=false

# Persistence and workers
DB_PATH=/home/devuser/dev/email-vps/data/email_vps.sqlite
LOG_RETENTION_DAYS=30
QUEUE_POLL_MS=5000
QUEUE_BATCH_SIZE=20

# Admin service (Section 15)
ADMIN_HOST=127.0.0.1
ADMIN_PORT=9100
ADMIN_ALLOWED_ORIGIN=https://mail.stackpilot.in

ADMIN_JWT_ACCESS_SECRET=change-this-access-secret
ADMIN_JWT_REFRESH_SECRET=change-this-refresh-secret
ADMIN_ACCESS_TTL=15m
ADMIN_REFRESH_TTL=7d

ADMIN_LOGIN_RATE_LIMIT=20
ADMIN_LOGIN_RATE_WINDOW_MS=60000
ADMIN_LOCKOUT_THRESHOLD=5
ADMIN_LOCKOUT_WINDOW_MINUTES=15

# Optional boot-time admin seed (set both to enable)
ADMIN_SEED_EMAIL=
ADMIN_SEED_PASSWORD=
ADMIN_DEFAULT_ROLE=admin

ADMIN_METRICS_PATH=/home/devuser/dev/email-vps/metrics.json
