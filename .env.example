# HTTP service
HOST=0.0.0.0
PORT=8081

# Mail API security
MAIL_API_TOKEN=replace_with_a_strong_random_token
MAIL_ALLOW_NON_LOCAL=false

# Mail envelope
MAIL_FROM=Email VPS <noreply@stackpilot.in>
MAIL_DAILY_LIMIT=500
MAIL_RETRY_MAX=3
